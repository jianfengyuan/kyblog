<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kyblog.Dao.TagDao">
    <sql id="tagCommonsValue">
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="articleCount != null ">
            article_count = #{articleCount},
        </if>
        <if test="status != null ">
            status = #{status},
        </if>
    </sql>

    <sql id="insertColumn">
        <if test="name != null and name != ''">
            name,
        </if>
        <if test="articleCount != null">
            article_count,
        </if>
        <if test="status != null">
            status,
        </if>
    </sql>

    <sql id="insertValue">
        <if test="name != null and name != ''">
            #{name},
        </if>
        <if test="articleCount != null ">
            #{articleCount},
        </if>
        <if test="status != null">
            #{status},
        </if>
    </sql>

    <sql id="selectField">
        id, name, article_count, status
    </sql>

    <select id="queryTags" resultType="Tag">
        select <include refid="selectField"></include>
        from tag
        where 1=1
        <if test="status!=null">
            and status=#{status}
        </if>

        <if test="mode==0">
            order by id
        </if>
        <if test="mode==1">
            order by name
        </if>
        <if test="mode==2">
            order by article_count
        </if>
        <if test="desc==1">
            desc
        </if>
        <if test="offset!= null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="insertTag"  keyProperty="id">
        insert into tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>

    <update id="updateStatusById">
        update tag set status=#{status} where id=#{id}
    </update>

    <update id="updateStatusByName">
        update tag set status=#{status} where name=#{name}
    </update>

    <select id="queryByName" resultType="Tag">
        select <include refid="selectField"></include>
        from tag
        where name=#{name} and status=1
    </select>

    <select id="queryByArticleId" resultType="Tag">
        select <include refid="selectField"></include>
        from tag
        where id in
              (select tag_id from article_tag where
              article_id=#{articleId} and status=1)
    </select>

    <select id="queryById" resultType="Tag">
        select <include refid="selectField"></include>
        from tag
        where id=#{id} and status=1
    </select>

    <update id="updateReadCount">
        update tag
        <set>
            <include refid="tagCommonsValue"></include>
        </set>
        where id=#{id}
    </update>

    <update id="updateTag">
        update tag
        <set>
            <include refid="tagCommonsValue"></include>
        </set>
        where id=#{id}
    </update>

    <select id="queryRows" resultType="int">
        select count(*)
        from tag
        where 1=1
        <if test="status!=null">
            and status=#{status}
        </if>
    </select>
</mapper>