<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kyblog.Dao.ArticleTagDao">
    <sql id="selectField">
        id, article_id, tag_id, status
    </sql>

    <sql id="insertColumn">
        <if test="articleId != null and articleId != ''">
            article_id,
        </if>
        <if test="tagId != null and tagId != ''">
            tag_id,
        </if>
        <if test="status != null">
            status,
        </if>
    </sql>

    <sql id="insertValue">
        <if test="articleId != null">
            #{articleId},
        </if>
        <if test="tagId != null">
            #{tagId},
        </if>
        <if test="status != null">
            #{status},
        </if>
    </sql>

    <sql id="commonsValue">
        <if test="articleId != null ">
            article_id = #{articleId},
        </if>
        <if test="tagId != null ">
            tag_id = #{tagId},
        </if>
        <if test="status != null ">
            status = #{status},
        </if>
    </sql>
    
    <insert id="insertArticleTag" >
        insert into article_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>
    
    <select id="queryAll" resultType="ArticleTag">
        select <include refid="selectField"></include>
        from article_tag
        where status = 1
    </select>

    <select id="queryByArticleId" resultType="ArticleTag">
        select <include refid="selectField"></include>
        from article_tag
        where article_id = #{articleId}
        and status = 1
    </select>

    <select id="queryByTagId" resultType="ArticleTag">
        select <include refid="selectField"></include>
        from article_tag
        where tag_id = #{tagId}
        and status = 1
    </select>
    <select id="queryByTagIdAndArticleId" resultType="ArticleTag">
        select <include refid="selectField"></include>
        from article_tag
        where tag_id = #{tagId}
        and article_id = #{articleId}
        and status = 1
    </select>

    <update id="updateStatus">
        update article_tag
        set status = #{status}
        where id=#{id}
    </update>
</mapper>